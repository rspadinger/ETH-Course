contract Governance {
    //### set votingDelay & votingPeriod => provide in constructor

    //### call constructors of all contracts (except: GovernorCountingSimple) => name for Governor: "My DAO"
    constructor(IVotes _token, TimelockController _timelock, uint256 _quorum) {}

    //### overide votingDelay() & votingPeriod()

    // The following functions are overrides required by Solidity.

    function quorum(
        uint256 blockNumber
